<article>
  <header>
      <h1><%= @event.name %></h1>
  </header>
  <p>
    <%= @event.description %>
  </p>
  <h3>When:</h3>
  <p>
    <%= @event.starts_at.to_s %>
  </p>
  <h3>Where:</h3>
  <p>
    <%= @event.location %>
  </p>
  <h2>Price:</h2>
  <p>
    <%= format_price(@event) %>
  <p>
  </article>

<%= link_to "Events", events_path %>
